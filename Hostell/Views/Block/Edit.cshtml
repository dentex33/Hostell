@model Hostell.Models.Block

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Block</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="NoBlock" class="control-label"></label>
                <input asp-for="NoBlock" class="form-control" />
                <span asp-validation-for="NoBlock" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumberOfPlace" class="control-label"></label>
                <input asp-for="NumberOfPlace" class="form-control" />
                <span asp-validation-for="NumberOfPlace" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OccupiedPlace" class="control-label"></label>
                <input asp-for="OccupiedPlace" class="form-control" />
                <span asp-validation-for="OccupiedPlace" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Floor" class="control-label"></label>
                <input asp-for="Floor" class="form-control" />
                <span asp-validation-for="Floor" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Balcony" /> @Html.DisplayNameFor(model => model.Balcony)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Main">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
